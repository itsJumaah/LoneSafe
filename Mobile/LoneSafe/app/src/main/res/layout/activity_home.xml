<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.itsjumaah.lonesafe.Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Risk Level:"
        android:id="@+id/tvRiskLevelLabel"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On Field Hours:"
        android:id="@+id/tvHoursLabel"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/tvRiskLevelLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="    S.O.S    "
        android:id="@+id/btnSOS"
        android:onClick="showSosAlert"
        android:background="@drawable/roundsosbutton"
        android:textColor="#eeeeee"
        android:textStyle="bold"
        android:ellipsize="start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvRiskLvl"
        android:hint="Select Risk Level"
        android:textColor="@color/lonesafeBackground"
        android:layout_below="@+id/tvUser1"
        android:layout_toRightOf="@+id/tvHoursLabel"
        android:layout_toEndOf="@+id/tvHoursLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:00"
        android:id="@+id/tvStTime"
        android:textColor="@color/lonesafeBackground"
        android:layout_below="@+id/tvHoursLabel"
        android:layout_alignLeft="@+id/btnSOS"
        android:layout_alignStart="@+id/btnSOS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:00"
        android:id="@+id/tvFnTime"
        android:textColor="@color/lonesafeBackground"
        android:layout_above="@+id/tvNextCheckLbl"
        android:layout_toRightOf="@+id/tvRiskLvl"
        android:layout_toEndOf="@+id/tvRiskLvl" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btnStop"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Till Next CheckIn:"
        android:id="@+id/tvNextCheckLbl"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tvStTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start:"
        android:id="@+id/tvStartLbl"
        android:layout_above="@+id/tvNextCheckLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish:"
        android:id="@+id/tvFinishLbl"
        android:layout_alignTop="@+id/tvStTime"
        android:layout_alignRight="@+id/btnSOS"
        android:layout_alignEnd="@+id/btnSOS"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:30"
        android:id="@+id/textView3"
        android:textColor="@color/lonesafeBackground"
        android:layout_alignTop="@+id/tvNextCheckLbl"
        android:layout_alignRight="@+id/space3"
        android:layout_alignEnd="@+id/space3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:id="@+id/tvUser1"
        android:textColor="@color/lonesafeBackground"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignRight="@+id/tvFinishLbl"
        android:layout_alignEnd="@+id/tvFinishLbl"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space3" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/tvUser1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvUser1"
        android:layout_alignEnd="@+id/tvUser1"
        android:id="@+id/space" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/tvRiskLevelLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/space"
        android:layout_alignEnd="@+id/space"
        android:id="@+id/space2" />

</RelativeLayout>
